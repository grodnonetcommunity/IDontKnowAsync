<Window x:Class="WpfAsync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpfAsync="clr-namespace:WpfAsync"
        mc:Ignorable="d" FontSize="44"
        Title="MainWindow" Width="800" Height="600"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance wpfAsync:MainViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Button Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Make it Beautiful" Click="MakeItBeautifulOnClick"/>
        
        <TextBlock Name="ResultTextBox" Grid.Row="1" HorizontalAlignment="Center" Text="{Binding Result}"/>
    </Grid>
</Window>
